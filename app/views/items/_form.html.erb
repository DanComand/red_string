<%= form_for(@item) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lent_to %><br />
    <%= f.text_area :lent_to %>
  </div>
  <div class="field">
    <%= f.label :date_lent %><br />
    <%= f.text_area :date_lent %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_area :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_area :email %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>